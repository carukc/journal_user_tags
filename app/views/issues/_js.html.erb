<% if @issue %>
  <%= javascript_include_tag 'mention.js', :plugin => 'journal_user_tags' %>
  <script type="text/javascript">
    $(document).ready(function(){
      $(".primary-actions a").click(function(){
        mentionInterval = window.setInterval(function(){
          if (typeof(CKEDITOR) != "undefined"){
            $('#issue_notes').mentions();
            window.clearInterval(mentionInterval);
          }
        }, 250);
      });
     })
  </script>
<% end %>